---
const { title, content, src, reverse} = Astro.props;
---

<div class=`flex ${reverse ? 'flex-row-reverse' : 'flex-row'}`>
    <div>
        <iframe src={src} style="width: 100%; height:100%" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
    </div>
    <article>
        <h3>{title}</h3>
        <p>{content}</p>
    </article>
</div>