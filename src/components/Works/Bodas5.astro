---
interface Props {
  video1: string
  video2: string
  video3: string
  video4: string
}
const { video1, video2, video3, video4 } = Astro.props
---

<div class='flex flex-col justify-center gap-8 md:flex-row-reverse'>
  <div class='w-full flex flex-col gap-8'>
    <iframe
      class='animate-on-scroll w-full aspect-[2/1]'
      src={video1 + 'preview'}
      allow='autoplay'
      allowfullscreen></iframe>

    <iframe
      class='animate-on-scroll w-full aspect-[2/1]'
      src={video2 + 'preview'}
      allow='autoplay'
      allowfullscreen></iframe>
  </div>

  <div class='w-full flex flex-col gap-8'>
    <iframe
      class='animate-on-scroll w-full aspect-[2/1]'
      src={video3 + 'preview'}
      allow='autoplay'
      allowfullscreen></iframe>

    <iframe
      class='animate-on-scroll w-full aspect-[2/1]'
      src={video4 + 'preview'}
      allow='autoplay'
      allowfullscreen></iframe>
  </div>
</div>
