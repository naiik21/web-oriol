---
interface Props {
  video1: string
  video2: string
  video3: string
}
const { video1, video2, video3 } = Astro.props
---

<div class='flex flex-col justify-center gap-8 md:flex-row'>
  <iframe
    class='w-full aspect-square'
    src={video1 + 'preview'}
    allow='autoplay'
    allowfullscreen></iframe>

  <div class='w-full flex flex-col gap-8'>
    <iframe
      class='w-full aspect-[2/1]'
      src={video2 + 'preview'}
      allow='autoplay'
      allowfullscreen></iframe>

    <iframe
      class='w-full aspect-[2/1]'
      src={video3 + 'preview'}
      allow='autoplay'
      allowfullscreen></iframe>
  </div>
</div>
