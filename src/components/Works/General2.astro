---
interface Props {
  text: string
  video: string
}
const { text, video } = Astro.props
---

<div class='flex flex-col'>
  <aside class='animate-on-scroll mb-12'>
    <video src={video} loop muted autoplay playsinline></video>
  </aside>
  <p
    class='animate-on-scroll text-center text-[24px] xl:text-[30px] md:text-[26px]'>
    {text}
  </p>
</div>
