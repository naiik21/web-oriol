---
interface Props {
  video1: string
  video2: string
  video3: string
  video4: string
}
const { video1, video2, video3, video4 } = Astro.props
---

<div class='flex flex-col justify-center gap-8 md:flex-row'>
  <div class='w-full flex items-center'>
    <iframe
      class='w-full aspect-[2/1]'
      src={video1 + 'preview'}
      allow='autoplay'></iframe>
  </div>

  <iframe class='w-full aspect-square' src={video2 + 'preview'} allow='autoplay'
  ></iframe>

  <div class='w-full flex flex-row gap-8 md:flex-col'>
    <iframe
      class='w-full aspect-[2/1]'
      src={video3 + 'preview'}
      allow='autoplay'></iframe>

    <iframe
      class='w-full aspect-[2/1]'
      src={video4 + 'preview'}
      allow='autoplay'></iframe>
  </div>
</div>
