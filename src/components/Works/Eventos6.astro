---
interface Props {
  video1: string
  video2: string
  video3: string
  video4: string
  video5: string
}
const { video1, video2, video3, video4, video5 } = Astro.props
---

<div class='flex flex-col justify-center gap-8'>
  <div class='w-full flex flex-row gap-8'>
    <iframe
      class='w-full aspect-[1/2]'
      src={video1 + 'preview'}
      allow='autoplay'
      allowfullscreen></iframe>

    <iframe
      class='w-full aspect-[1/2]'
      src={video2 + 'preview'}
      allow='autoplay'
      allowfullscreen></iframe>
  </div>

  <iframe
    class='w-full'
    src={video3 + 'preview'}
    allow='autoplay'
    allowfullscreen></iframe>

  <div class='w-full flex flex-row gap-8'>
    <iframe
      class='w-full aspect-[1/2]'
      src={video4 + 'preview'}
      allow='autoplay'
      allowfullscreen></iframe>

    <iframe
      class='w-full aspect-[1/2]'
      src={video5 + 'preview'}
      allow='autoplay'
      allowfullscreen></iframe>
  </div>
</div>
