---
import NavbarMenu from '../NavbarMenu.astro'

interface Props {
  video: string
  title: string
  videoMobile: string
}
const { video, title, videoMobile } = Astro.props
---

<header class='h-screen relative'>
  <NavbarMenu />
  <video
    class='absolute top-0'
    width='320'
    height='240'
    muted
    loop
    autoplay
    style='width: 100%;  height: auto;'>
    <source src={video} type='video/mp4' media='(min-width: 1024px)' />
    <!-- <source
      src= {videoMobile}
      type='video/mp4'
      media='(max-width: 1023px)'
    /> -->
  </video>
  <h1
    class='absolute text-black w-max text-2xl xl:text-9xl lg:text-7xl md:text-5xl sm:text-4xl'
    style='bottom: 50%; left: 50%; transform: translate(-50%, 0%); text-shadow: 3px 3px 5px #0d0d0d;'>
    {title}
  </h1>
</header>
