---
import VerticalVideo from "./VerticalVideo.astro"

const { class: className} = Astro.props;

const VIDEOS = [
    {
        title: "FrontEnd",
        src:"https://player.vimeo.com/video/294187310?h=4fa30ae97f&autoplay=1&background=1",
        width:"auto",
        height:"auto"
    },
    {
        title: "BackEnd",
        src:"https://player.vimeo.com/video/294187310?h=4fa30ae97f&autoplay=1&background=1",
        width:"auto",
        height:"auto"
    },
    {
        title: "Librerias/Framework",
        src:"https://player.vimeo.com/video/294187310?h=4fa30ae97f&autoplay=1&background=1",
        width:"auto",
        height:"auto"
    }
    ,
    {
        title: "Herramientas",
        src:"https://player.vimeo.com/video/294187310?h=4fa30ae97f&autoplay=1&background=1",
        width:"auto",
        height:"auto"
    },
];
---

<div class=`grid grid-cols-1 grid-rows-4 gap-4 md:grid-cols-4 md:grid-rows-1 ${className}`>
    {VIDEOS.map((video) => <VerticalVideo {...video} />)}
</div>
