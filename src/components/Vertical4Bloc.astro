---
import VerticalVideo from "./VerticalVideo.astro"

const { class: className} = Astro.props;

const VIDEOS = [
    {
        title: "FrontEnd",
        src:"./instagram-video.mp4",
        format:"video/mp4",
        width:"auto",
        height:"auto"
    },
    {
        title: "BackEnd",
        src:"./instagram-video.mp4",
        format:"video/mp4",
        width:"auto",
        height:"auto"
    },
    {
        title: "Librerias/Framework",
        src:"./instagram-video.mp4",
        format:"video/mp4",
        width:"auto",
        height:"auto"
    },
    {
        title: "Herramientas",
        src:"./instagram-video.mp4",
        format:"video/mp4",
        width:"auto",
        height:"auto"
    },
];
---

<div class=`grid grid-cols-1 grid-rows-4 gap-4 md:grid-cols-4 md:grid-rows-1 ${className}`>
    {VIDEOS.map((video) => <VerticalVideo {...video} />)}
</div>
