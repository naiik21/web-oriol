---
interface Props {
  title: string
  source: string
}
const { title, source } = Astro.props
---

<style>
  h4:hover ~ #video-subcat {
    display: block;
  }
</style>

<h4 class='z-[1]'>{title}</h4>
<div
  id='video-subcat'
  style='transform: translate(-50%, -50%);'
  class='hidden max-w-[31.25rem] max-h-[31.25rem] m-auto absolute top-1/2 left-1/2'>
  <video width='100%' height='100%' muted playsinline autoplay loop>
    <source src={source} />
    Your browser does not support the video element.
  </video>
</div>
