---
import LinkedIn from './Icons/LinkedIn.astro'
import Mail from './Icons/Mail.astro'

interface Props {
  text: string
}
const { text } = Astro.props
---

<div class='w-full mx-auto xl:max-w-[1600px] mb-10'>
  <h4
    class='text-center text-xl xl:text-5xl lg:text-4xl md:text-3xl sm:text-2xl'>
    {text}
  </h4>
</div>
<footer class='w-full mx-auto xl:max-w-[1500px] mb-5 justify-center'>
  <div class='md:mx-5 flex flex-row justify-between sm:flex-row'>
    <a href='/'>
      <img
        src='./o-logo.png'
        alt='Logo'
        width='100px'
        height='10px'
        style='filter: drop-shadow(0 0 5px rgba(0,0,0,.8));'
      />
    </a>

    <div class='flex items-center gap-2 md:gap-5 w-[350px] justify-center'>
      <a
        href='https://www.linkedin.com/in/oriol-ortega-bogu%C3%B1a-5149651b8/'
        target='_blank'
        class='flex items-center gap-2'>
        <LinkedIn class='size-9' />
      </a>

      <a
        href='mailto:name@email.com'
        target='_blank'
        class='flex items-center gap-2'>
        <Mail class='size-9' />
        oriolortega@gmail.com
      </a>
    </div>
  </div>
</footer>
